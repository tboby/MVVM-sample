<UserControl x:Class="MVVM_exp.MyListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_exp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:MyListViewModel}">
             <StackPanel>
           <ItemsControl
                 ItemsSource="{Binding MyItems}">
                 <ItemsControl.ItemTemplate>
                     <DataTemplate>
                         <local:MyListItemControl Orientation="Horizontal"/>
                     </DataTemplate>
                 </ItemsControl.ItemTemplate>
             </ItemsControl>

           <ItemsControl
                 ItemsSource="{Binding MyItems}">
                 <ItemsControl.ItemTemplate>
                     <DataTemplate>
                         <local:MyListItemControl Orientation="Vertical"/>
                     </DataTemplate>
                 </ItemsControl.ItemTemplate>
             </ItemsControl>

             </StackPanel>
   </UserControl>
