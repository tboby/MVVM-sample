<UserControl x:Class="MVVM_exp.MyListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_exp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:MyListItemViewModel}">
    <StackPanel Orientation="{Binding Orientation}">
        <TextBlock Text="{Binding MyString}"/>
        <TextBlock Text="{Binding MyNumber}"/>
    </StackPanel>
</UserControl>
